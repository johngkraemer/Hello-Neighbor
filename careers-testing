<!-- show/hide for read more sections-->
<!--https://stackoverflow.com/questions/12016721/show-hide-multiple-elements-independently -->

<script>
$(document).ready(function() {

  // choose text for the show/hide link - can contain HTML (e.g. an image)
  var showText='... more&nbsp;<i class="fa fa-angle-down">';
  var hideText='less&nbsp;<i class="fa fa-angle-up">';

  // initialise the visibility check
  var is_visible = false;

  // append show/hide links to the element directly following the element with a class of "toggle"
  $('.toggle').next('.more').append('<a href="#" class="toggleLink">'+showText+'</a>');

  // hide all of the elements with a class of 'toggle'
  $('.toggle').hide();

  // capture clicks on the toggle links
  $('a.toggleLink').click(function() {

    // switch visibility
    // change the link depending on whether the element is shown or hidden
        $(this).html( ($(this).parent().prev('.toggle').is(":visible")) ? showText : hideText);
    //$(this).html( ($(this).html() == hideText) ? showText : hideText);

    // toggle the display - uncomment the next line for a basic "accordion" style
    //$('.toggle').hide();$('a.toggleLink').html(showText);
    $(this).parent().prev('.toggle').toggle();

    // return false so any link destination is not followed
    return false;

    });
  });

</script>

<script>
$(document).ready(function() {

// choose text for the show/hide link - can contain HTML (e.g. an image)
var showText='More&nbsp;<i class="fa fa-angle-down">';
var hideText='Less&nbsp;<i class="fa fa-angle-up">';

// initialise the visibility check
var is_visible = false;

// append show/hide links to the element directly preceding the element with a class of "toggle"
$('.toggle').next('.expand-more').append('<a href="#" class="toggleLinkExpand">'+showText+'</a>');

// hide all of the elements with a class of 'toggle'
$('.toggle').hide();

// capture clicks on the toggle links
$('a.toggleLinkExpand').click(function() {

// switch visibility
// change the link depending on whether the element is shown or hidden
    $(this).html( ($(this).parent().prev('.toggle').is(":visible")) ? showText : hideText);
//$(this).html( ($(this).html() == hideText) ? showText : hideText);

// toggle the display - uncomment the next line for a basic "accordion" style
//$('.toggle').hide();$('a.toggleLink').html(showText);
$(this).parent().prev('.toggle').toggle();

// return false so any link destination is not followed
return false;

});
});

</script>

<script>
$(document).ready(function () {
  $("#mobileToggleMenu").hide();

  var showMenuText='<i class="fa fa-bars"></i>';
  var hideMenuText='<i class="fa fa-bars"></i>';


  $('.mobileMenuShow').click(function (e) {
    $("#mobileToggleMenu").slideToggle(200);
    var val = $(this).html() == hideMenuText ? showMenuText : hideMenuText ;
    $(this).hide().html(val).fadeIn(200);

    e.preventDefault();

  });
});
</script>
